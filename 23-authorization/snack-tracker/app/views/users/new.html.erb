<h1>Create a new user or <%= link_to "Login", login_path %></h1>

<% if @user.errors %>
    <% @user.errors.full_messages.each do |message| %>
        <div class="error"><%= message %></div>
    <% end %>
<% end %>

<%= form_for @user do |f| %>
    <%= f.label :username %>
    <%= f.text_field :username %>
    <%= f.label :password %>
    <%= f.password_field :password %>
    <%= f.submit %>
<% end %>